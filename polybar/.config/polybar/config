# Modules
[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scroll = false
fuzzy-match = true

ws-icon-0 = 1; terminal
ws-icon-1 = 2; chrome
ws-icon-2 = 3; atom
ws-icon-3 = 4; telegram
ws-icon-4 = 5; spotify
ws-icon-5 = 6; office
ws-icon-6 = 7; files
ws-icon-7 = 8; art
ws-icon-8 = 9; empty

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.transparency}

label-focused = %icon%
label-focused-foreground = ${colors.i3iconfocused}
label-focused-background = ${colors.transparency}
label-focused-underline = ${colors.i3line}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-foreground = ${colors.i3iconunfocused}
label-unfocused-underline = ${colors.transparency}
label-unfocused-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.i3line}
label-urgent-background = ${colors.transparency}
label-urgent-padding = 1

[module/window]
type = internal/xwindow
