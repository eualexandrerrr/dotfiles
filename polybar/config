# Janela
[module/janela]
type = internal/xwindow

format-prefix = "  "
format-prefix-foreground = ${cores.icones-modulos}

format = <label>
format-background = ${cores.transparente}
format-foreground = ${cores.fontes}
format-padding = 4

label = %title%
label-maxlen = 80

label-empty = Sem janelas
label-empty-foreground = ${cores.fontes}

# Weather
[module/weather]
type = custom/script
interval = 60
