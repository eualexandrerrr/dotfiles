format-prefix = " "
format-prefix-foreground = ${cores.icones-modulos}

label-layout = %layout%
label-layout-foreground = ${cores.fontes}

# Usuário
[module/usuario]
type = custom/script
interval = 1

format-prefix = " "
format-prefix-foreground = ${cores.icones-modulos}
exec = echo $USER@$HOSTNAME
format-foreground = ${cores.fontes}

# Kernel
[module/kernel]
type = custom/script
interval = 1

format-prefix = " "
format-prefix-foreground = ${cores.icones-modulos}
exec = uname -r
tail = false
format-foreground = ${cores.fontes}

